/events/unit-of-learning-availabilities:
  post:
    description: Endpoint to publish unit of learning availability events.
    body:
      application/json:
        type: UnitOfLearningAvailability
    responses:
      202:
        body:
          application/json:
            type: EventResponse
      400:
        body:
          application/json:
            type: BadRequestError

/events/student-addresses:
  post:
    description: Endpoint to publish student address update events.
    body:
      application/json:
        type: StudentAddress
    responses:
      202:
        body:
          application/json:
            type: EventResponse
      400:
        body:
          application/json:
            type: BadRequestError

/events/staged-study-applications:
  post:
    description: Endpoint to publish staged study application events.
    body:
      application/json:
        type: StagedStudyApplication
    responses:
      202:
        body:
          application/json:
            type: EventResponse
      400:
        body:
          application/json:
            type: BadRequestError
