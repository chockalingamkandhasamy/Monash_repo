#%RAML 1.0
title: My API
version: v1
baseUri: https://api.example.com/v1
mediaType: application/json
securitySchemes:
  oauth_2_0:
    type: OAuth 2.0
    description: Used for authorization
    settings:
      authorizationUri: https://auth.example.com/oauth/authorize
      accessTokenUri: https://auth.example.com/oauth/token
      authorizationGrants: [ authorization_code, implicit ]

types:
  ErrorResponse:
    type: object
    properties:
      error:
        type: string
        description: Error code
        example: APP:BAD_REQUEST
      message:
        type: string
        description: Detailed error message
        example: "Invalid input provided"

  ExampleRequest:
    type: object
    properties:
      field1:
        type: string
        description: Description of field1
        example: "Sample value"
      field2:
        type: integer
        description: Description of field2
        example: 123

  ExampleResponse:
    type: object
    properties:
      success:
        type: boolean
        example: true
      data:
        type: object
        properties:
          id:
            type: string
            example: "abc123"
          name:
            type: string
            example: "Sample Name"

/resource:
  get:
    description: Retrieve a list of resources
    queryParameters:
      param1:
        type: string
        description: Filter by parameter 1
        required: false
      param2:
        type: integer
        description: Filter by parameter 2
        required: false
    responses:
      200:
        body:
          application/json:
            type: ExampleResponse
      400:
        body:
          application/json:
            type: ErrorResponse

/resource/{id}:
  uriParameters:
    id:
      type: string
      description: Unique identifier for the resource
  get:
    description: Retrieve a specific resource by ID
    responses:
      200:
        body:
          application/json:
            type: ExampleResponse
      404:
        body:
          application/json:
            type: ErrorResponse
```

